{
  "name": "vite-react-ts-starter",
  "type": "module",
  "version": "0.1.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "license": "MIT",
  "homepage": "https://github.com/zhixiangyao/vite-react-ts-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-react-ts-starter.git"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "preview": "npm run build && vite preview",
    "preview:dist": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:stylelint": "stylelint \"./**/*.css\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "clsx": "2.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-is": "19.1.0",
    "react-router": "7.6.2",
    "react-router-dom": "7.6.2",
    "zustand": "5.0.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.14.1",
    "@eslint-react/eslint-plugin": "1.52.2",
    "@tailwindcss/vite": "4.1.10",
    "@types/node": "22.15.31",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@vitejs/plugin-react-swc": "3.10.2",
    "dotenv": "16.5.0",
    "eslint": "9.28.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "lint-staged": "16.1.0",
    "simple-git-hooks": "2.13.0",
    "stylelint": "16.20.0",
    "stylelint-config-standard": "38.0.0",
    "stylelint-order": "7.0.0",
    "tailwindcss": "4.1.10",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-checker": "0.9.3",
    "vite-plugin-compression": "0.5.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.css": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
