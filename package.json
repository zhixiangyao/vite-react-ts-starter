{
  "name": "vite-react-ts-starter",
  "type": "module",
  "version": "0.1.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "license": "MIT",
  "homepage": "https://github.com/zhixiangyao/vite-react-ts-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-react-ts-starter.git"
  },
  "engines": {
    "node": ">=24.11.1",
    "pnpm": ">=10.24.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "preview": "npm run build && vite preview",
    "preview:dist": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:css": "stylelint \"./**/*.css\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "clsx": "2.1.1",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-is": "19.2.1",
    "react-router": "7.10.0",
    "react-router-dom": "7.10.0",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.3.0",
    "@eslint-react/eslint-plugin": "2.3.12",
    "@tailwindcss/vite": "4.1.17",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@vitejs/plugin-react-swc": "4.2.2",
    "dotenv": "17.2.3",
    "eslint": "9.39.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "lint-staged": "16.2.7",
    "simple-git-hooks": "2.13.1",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "stylelint-order": "7.0.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vite": "7.2.6",
    "vite-plugin-checker": "0.11.0",
    "vite-plugin-compression": "0.5.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.css": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
